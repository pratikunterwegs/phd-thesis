  langid = {english},
  keywords = {animal location data,Bayesian model selection,biased correlated random walk,grey seal,Halichoerus grypus,movement model,North Sea,reversible-jump Markov chain Monte Carlo,state-space model,switching behavior,telemetry},
  annotation = {\_eprint: https://esajournals.onlinelibrary.wiley.com/doi/pdf/10.1890/11-0326.1},
