  langid = {english},
  keywords = {analysis of tracking data,animal movement,Bayesian models,behavior,dispersal,hierarchical,MCMC (Markov chain Monte Carlo) methods,measurement error,meta-analysis of animal movement,migration,process noise,state-space models,WinBUGs analysis},
