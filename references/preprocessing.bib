  langid = {english},
  keywords = {animal location data,Erignathus barbatus,hierarchical model,measurement error,Monachus schauinslandi,movement model,state-space model,switching behaviour},
  annotation = {\_eprint: https://besjournals.onlinelibrary.wiley.com/doi/pdf/10.1111/2041-210X.12311},
