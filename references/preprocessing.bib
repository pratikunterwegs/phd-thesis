  langid = {english},
  keywords = {adaptive strategies,animal behaviour,biologging,dispersal,ecophysiology,energetic costs,GPS tracking,movement ecology,terrestrial ecology,vulturine guineafowl},
  annotation = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/ele.13763},
  file = {/home/pratik/Zotero/storage/6BSHDXMC/Klarevas-Irby et al. - 2021 - Efficient movement strategies mitigate the energet.pdf;/home/pratik/Zotero/storage/2GQE3KTG/ele.html}
