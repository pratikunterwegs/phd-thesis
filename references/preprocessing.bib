@article{corl2020,
  title = {Movement Ecology and Sex Are Linked to Barn Owl Microbial Community Composition},
  author = {Corl, Ammon and Charter, Motti and Rozman, Gabe and Toledo, Sivan and Turjeman, Sondra and Kamath, Pauline L. and Getz, Wayne M. and Nathan, Ran and Bowie, Rauri C. K.},
