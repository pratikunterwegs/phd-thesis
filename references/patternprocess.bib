  keywords = {disease model,landscape fragmentation,perceptual range,resource selection function,spatial heterogeneity},
  file = {/home/pratik/Zotero/storage/E285ZPR9/White et al. - 2018 - Disease outbreak thresholds emerge from interactio.pdf;/home/pratik/Zotero/storage/9V7KUHXC/7374.html}
