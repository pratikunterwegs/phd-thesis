@article{karanth2016,
  title = {Producing {{Diversity}}: {{Agroforests Sustain Avian Richness}} and {{Abundance}} in {{India}}'s {{Western Ghats}}},
  author = {Karanth, Krithi K. and Sankararaman, Vishnupriya and Dalvi, Shashank and Srivathsa, Arjun and Parameshwaran, Ravishankar and Sharma, Sushma and Robbins, Paul and Chhatre, Ashwini},
  year = {2016},
  journal = {Frontiers in Ecology and Evolution},
  volume = {4},
