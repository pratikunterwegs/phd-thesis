
@article{aben2018,
  title = {A Call for Viewshed Ecology: Advancing Our Understanding of the Ecology of Information through Viewshed Analysis},
  shorttitle = {A Call for Viewshed Ecology},
  author = {Aben, Job and Pellikka, Petri and Travis, Justin M. J.},
  year = {2018},
