@article{dawson2000,
  title = {Rate of Moult Affects Feather Quality: A Mechanism Linking Current Reproductive Effort to Future Survival},
  shorttitle = {Rate of Moult Affects Feather Quality},
  author = {Dawson, A and Hinsley, S. A and Ferns, P. N and Bonser, R. H. C and Eccleston, L},
